                        android:layout_weight="2"
                        android:background="@color/purple_700"
                        android:scaleType="fitXY">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
